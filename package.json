{
  "name": "jettreemark",
  "displayName": "JetTreeMark",
  "description": "JetTreeMark is a VS Code plugin that generates a markdown-compatible structure tree for selected files and folders",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:jtt.showFolder",
    "onView:jettreemark.view"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jettreemark",
          "title": "JetTreeMark",
          "icon": "src/pluginIcon.svg"
        }
      ]
    },
    "views": {
      "jettreemark": [
        {
          "type": "webview",
          "icon": "src/pluginIcon.svg",
          "id": "jettreemark.view",
          "name": "Tree View"
        }
      ]
    },
    "commands": [
      {
        "command": "jtt.showFolder",
        "title": "Show Folder in JetTreeMark"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "jtt.showFolder",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.2",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
